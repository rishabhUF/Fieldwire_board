%h1= @project.title
%p= @project.description

#comments
	%h2.comment_count= pluralize(@project.floorplans.count, "Floorplans")
	- @floorplans.each do |floorplan|
		.comment
			%p.username= floorplan.name
			%p= image_tag floorplan.image_url.to_s

	= render "floorplans/form"

= link_to "Back", root_path
= link_to "Edit", edit_project_path(@project)
= link_to "Delete", @project , method: :delete, data: {confirm: "Are you sure"}
